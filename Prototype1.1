def merge_pdfs(paths, output):
    for x in range(len(listMakers)):
        answers.append(listVariables[x].get())
    indexMakerChoice = df.index[df['Maker choice'].isin(answers)].tolist()
    idx = df.loc[df['Maker choice']]

